{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Echo",
	"version": "0.1.3",
	"identifier": "dk.novusgroup.echo",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:3000",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../out"
	},
	"app": {
		"windows": [
			{
				"title": "Echo",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
